	<script>
        let skip = 4; // Start skipping after the first 4 posts

        document.getElementById('load-more').addEventListener('click', function() {
            fetch(`/load-article/${skip}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(posts => {
                    if (posts.length > 0) {
                        posts.forEach(post => {
                            const postDiv = document.createElement('div');
                            postDiv.classList.add('col-md-6');
                            postDiv.setAttribute('data-aos', 'fade-up');
                            postDiv.setAttribute('data-aos-offset', '50');
                            postDiv.setAttribute('data-aos-duration', '400');
                            postDiv.setAttribute('data-aos-delay', '0');
                            postDiv.innerHTML = `
                                <div class="blog1-single-box">
                                    <div class="heading1">
                                        <div class="social-area <a href="social-media.html" class="social" id="uppercase">${post.contentType}</a>
                                         
                                        </div>
                                        <h4><a href="/post/${post._id}">${post.title}</a></h4>
                                        <p class="mt-16">${post.description}</p>
                                        <div class="author-area">
                                            <div class="author">
                                                <a  class="author-text">${post.email}</a>
                                            </div>
                                            <div class="date">
                                                <a href="#"><img src="assets/img/icons/date1.svg" alt="vexon" /> ${new Date(post.createdAt).toLocaleDateString()} </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;
                            document.querySelector('.blog1-posts-area .row').appendChild(postDiv);
                        });
                        skip += 4; // Increase the skip count for the next load
                    } else {
                        document.getElementById('load-more').style.display = 'none'; // Hide button if no more posts
                    }
                })
                .catch(err => console.error('Error loading more posts:', err));
        });
    </script>
